#!/usr/bin/env bash

BASEDIR=$(dirname $(dirname $0))
. "${BASEDIR}/lib/env.sh"
. "${BASEDIR}/lib/${iaas}/teardown.sh"

director() {
  echo "Destroying the BOSH director..."
  bbl down --state-dir ${state_dir} --no-confirm
}

cleanup() {
  chmod 600 ${key_dir}/id_jumpbox_${env_id}.pem
  rm -rf ${key_dir}/*
  rm -rf ${workdir}/*
  rm bbl-state.json
}

if [ $# -gt 0 ]; then
  while [ $# -gt 0 ]; do
    case $1 in
      director )
        director
        ;;
      accounts )
        iam_accounts
        ;;
      cleanup )
        cleanup
        ;;
      * )
        echo "Unrecognized option: $1" 1>&2
        exit 1
        ;;
    esac
    shift
    exit
  done
fi

director
iam_accounts
cleanup
